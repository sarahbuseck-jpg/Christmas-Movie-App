<%- include('../partials/header', {title: "Add Actor"}) %>

<div class="container mt-4">
    <h1 class="text-danger fw-bold mb-4">âž• Add New Actor</h1>

    <form action="/actors/add" method="POST">
        <div class="mb-3">
            <label class="form-label">Actor Name</label>
            <input type="text" class="form-control" name="actorName" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Age</label>
            <input type="number" class="form-control" name="age" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Image URL</label>
            <input type="text" class="form-control" name="image">
        </div>

        <button class="btn btn-danger">Save Actor</button>
    </form>
</div>


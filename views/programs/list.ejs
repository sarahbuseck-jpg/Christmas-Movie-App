<%- include('../partials/header', { title: 'Programs' }) %>

<h2 class="text-center mb-4">Programs</h2>

<div class="row g-4">

    <% programs.forEach(p => { %>
    <div class="col-md-4">
        <div class="card shadow-lg border-0 rounded-4">

            <img src="<%= p.poster || 'https://via.placeholder.com/400x250?text=No+Poster' %>"
     class="card-img-top"
     alt="<%= p.title %>"
     style="height:220px; object-fit:cover;">

            <div class="card-body">
                <h5 class="fw-bold"><%= p.title %></h5>
                <p class="text-muted">Released: <%= p.release_year %></p>
            </div>

        </div>
    </div>
    <% }) %>

</div>

<%- include('../partials/footer') %>